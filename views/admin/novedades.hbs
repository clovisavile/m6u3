<div class="container" style="margin-top: 50px;">
    {{!--fila 1--}}
    <div class="row">
        <p class="text-end">Hola {{usuario}}<a class="btn 
        btn-danger" href="/admin/login/logout">Cerrar sesión <i class="fas fa-sing-out-alt"></i></a>
        </p>
    </div>
    {{!--fin fila 1--}}
    {{!--inicio fila 2--}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3 text-right">
            <form class="d-flex">
                <input class="form-control me 2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}value="{{q}}"{{/if}}>
                <button class="btn btn-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
    </div>
    {{!--fin fila 2--}}
    {{!--inicio fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.lenght}}
            No se encontraron resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}
        </div>
    </div>
    {{!--fin fila 3--}}
</div>